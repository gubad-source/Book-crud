@model Bookk;
<div class="container">
    <div class="row">
        <div class="col-8 offset-2">
            <form method="post">
                <fieldset>
                    <legend>Yaratmaq</legend>
                    <div class="mb-3">
                        <label for="authorId" class="form-label">
                            Author
                        </label>
                        <input id="authorId" name="Author" class="form-control" value="@Model?.Author" />
                    </div>
                    <div class="mb-3">
                        <label for="genreId" class="form-label">
                            Genre
                        </label>
                        <input id="genreId" name="Genre" class="form-control" value="@Model?.Genre" />
                    </div>
                    <div class="mb-3">
                        <label for="priceId" class="form-label">
                            Price
                        </label>
                        <input id="priceId" name="Price" class="form-control" value="@Model.Price" />
                    </div>
                    @Html.AntiForgeryToken()
                    <input type="hidden" class="form-control" value="@Model.Id" />
                    <button type="submit" class="btn btn-primary">
                        Gonder
                    </button>
                </fieldset>
            </form>
        </div>
    </div>
</div>
